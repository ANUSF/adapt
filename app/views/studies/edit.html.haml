- title "Edit Study #{@study.name||""}"
- stylesheet :forms

- make_form_for @study do |f|
  %h3 Title and Abstract
  .collapsible
    = f.text_area :title, :rows => 4, :required => true
    = f.text_area :abstract, :rows => 16, :required => true

  %hr
  %h3 Data Description
  .collapsible
    %div
      - msg = @study.errors.on("Data Category")
      %label
        Category of data
        %em *
        - unless msg.blank?
          %em= msg
      %br
      = f.check_box :data_is_qualitative
      = f.check_box :data_is_quantitative
    .row
      = f.select :data_kind, :required => true
      = f.select :time_method
    .clear
    = f.text_area :sample_population
    .row
      = f.text_field :period_start, :size => 12
      .form-field &mdash;
      = f.text_field :period_end, :size => 12
      .form-field Time period data refers to
    .clear
    = f.text_field :response_rate
    .row
      = f.select :sampling_procedure
      = f.select :collection_method
    .clear
    .row
      = f.text_field :collection_start, :size => 12
      .form-field &mdash;
      = f.text_field :collection_end, :size => 12
      .form-field Data collection period
  .clear

  %hr
  %h3 Credits and Acknowledgements
  .collapsible
    = f.structured :depositors, :required => true
    = f.structured :principal_investigators, :required => true
    = f.structured :data_producers
    = f.structured :funding_agency
    = f.structured :other_acknowledgements, :size => 22
    = f.structured :references, :size => 22

  %hr
  %p= f.result_buttons ['Save and continue', 'Save and exit', 'Cancel']
