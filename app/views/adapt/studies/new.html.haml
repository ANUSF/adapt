- title "New Study"
- stylesheet :formtastic
- stylesheet :formtastic_changes

= semantic_form_for @study, :url => adapt_studies_path do |f|
  = f.inputs do
    = f.input :title, :input_html => { :rows => 4 }, :required => true
    = f.input :abstract, :required => true
  = f.buttons do
    - ['Create', 'Cancel'].each do |value|
      = f.commit_button value, :button_html => { :name => 'result' }
