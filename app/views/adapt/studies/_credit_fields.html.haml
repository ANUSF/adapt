- long = { :size => 35 }
- text = { :rows => 2, :cols => 25, :class => 'expandable' }

= @form.inputs 'Credits and Acknowledgements', :id => 'credit-fields', :class => 'tab' do
  = nested_fields @form, :depositors, |
                  :input_html => long,
                  :required => { :name => true },
                  :choices_on => [:affiliation]
  = nested_fields @form, :principal_investigators, |
                  :input_html => long,
                  :required => { :name => true },
                  :choices_on => [:affiliation]
  = nested_fields @form, :data_producers, |
                  :input_html => long,
                  :required => false,
                  :choices_on => [:affiliation]
  = nested_fields @form, :funding_agency, |
                  :input_html => long,
                  :required => false
  = nested_fields @form, :other_acknowledgements, |
                  :input_html => { :size => 25 },
                  :required => false,
                  :choices_on => [:affiliation]
  = nested_fields @form, :references, |
                  :as => :text,
                  :input_html => text,
                  :required => false

  = @form.inputs 'Affiliations', :class => 'adapt-choices', |
                                 :id => 'adapt-affiliation-choices' do
    %li.empty &nbsp
    - @study.selections(:affiliation).each do |entry|
      %li= entry
