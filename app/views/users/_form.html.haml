- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :email
    %br
    = f.text_field :email
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  %hr
  %h3 Contact Details
  %p
    = f.label "Full name"
    %br
    = f.text_field :name
  %p
    = f.label :address
    %br
    = f.text_area :address, :cols => 60, :rows => 6
  %p
    = f.label :telephone
    %br
    = f.text_field :telephone
  %p
    = f.label :fax
    %br
    = f.text_field :fax
  %hr
  %p= f.submit "Submit"
