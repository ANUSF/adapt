- title "Login"

- form_for @user_session do |f|
  = f.error_messages
  %p
    = f.label :username
    %br
    = f.text_field :username
  %p
    = f.label :password
    %br
    = f.password_field :password
  %h3 Or use OpenID
  = f.text_field :openid_identifier, :label => "OpenID URL"
  %hr
  %p= f.submit "Submit"
